---
import Modal from "./Modal.astro";

const contactLinks = [
  {
    name: "Email",
    value: "richardbanguiz@gmail.com",
    href: "mailto:richardbanguiz@gmail.com",
    icon: "mail",
  },
  {
    name: "LinkedIn",
    value: "https://www.linkedin.com/in/richard-banguiz-47b57a28a/",
    href: "https://www.linkedin.com/in/richard-banguiz-47b57a28a/",
    icon: "linkedin",
  },
  {
    name: "Twitter / X",
    value: "@urkidden2",
    href: "https://x.com/Urkidden2",
    icon: "twitter",
  },
  {
    name: "GitHub",
    value: "github.com/urkiddennn",
    href: "https://github.com/urkiddennn",
    icon: "github",
  },
];
---

<Modal id="contact-modal" title="Get in Touch">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    <div class="space-y-6">
      <p class="text-gray-400 font-thin text-sm leading-relaxed">
        I'm always open to new opportunities, collaborations, or just a friendly
        chat. Feel free to reach out through any of these platforms or use the
        form.
      </p>
      <div class="grid grid-cols-1 gap-4">
        {
          contactLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-4 rounded-xl border border-white/5 bg-white/5 p-4 transition-all hover:border-white/20 hover:bg-white/10"
            >
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/5 text-gray-400">
                {link.icon === "mail" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <rect width="20" height="16" x="2" y="4" rx="2" />
                    <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                  </svg>
                )}
                {link.icon === "linkedin" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                    <rect width="4" height="12" x="2" y="9" />
                    <circle cx="4" cy="4" r="2" />
                  </svg>
                )}
                {link.icon === "twitter" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z" />
                  </svg>
                )}
                {link.icon === "github" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                    <path d="M9 18c-4.51 2-5-2-7-2" />
                  </svg>
                )}
              </div>
              <div class="flex flex-col">
                <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">
                  {link.name}
                </span>
                <span class="text-sm text-gray-300 font-thin">
                  {link.value}
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>

    <form class="space-y-4">
      <div>
        <label
          for="name"
          class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2"
          >Name</label
        >
        <input
          type="text"
          id="name"
          name="name"
          placeholder="John Doe"
          class="w-full rounded-xl border border-white/5 bg-white/5 p-3 text-sm text-white placeholder-gray-600 outline-none transition-all focus:border-blue-500/50 focus:bg-white/10"
          required
        />
      </div>
      <div>
        <label
          for="email"
          class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2"
          >Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          placeholder="john@example.com"
          class="w-full rounded-xl border border-white/5 bg-white/5 p-3 text-sm text-white placeholder-gray-600 outline-none transition-all focus:border-blue-500/50 focus:bg-white/10"
          required
        />
      </div>
      <div>
        <label
          for="message"
          class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2"
          >Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="4"
          placeholder="Hello, I'd like to talk about..."
          class="w-full rounded-xl border border-white/5 bg-white/5 p-3 text-sm text-white placeholder-gray-600 outline-none transition-all focus:border-blue-500/50 focus:bg-white/10 resize-none"
          required></textarea>
      </div>
      <button
        type="submit"
        class="w-full rounded-xl bg-blue-600 py-3 text-sm font-semibold text-white transition-all hover:bg-blue-500 active:scale-[0.98]"
      >
        Send Message
      </button>
    </form>
  </div>
</Modal>
