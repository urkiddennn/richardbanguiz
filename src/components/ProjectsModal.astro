---
import Modal from "./Modal.astro";

const projects = [
  {
    title: "Nekoneko",
    description:
      "A block-based rendering engine for founders and teams. Zero complexity, just clean JSON blocks and instant global deployment.",
    github: "https://github.com",
    demo: "https://nekoneko.space/",
    tags: ["React", "Tailwind", "Typescript", "Convex"],
  },
  {
    title: "Prepplet",
    description: "A website for studying Civil Service Exam",
    github: "https://github.com/urkiddennn/Prepplet",
    demo: "https://prepplet.online",
    tags: [
      "React",
      "MongoDB",
      "Tailwind",
      "Javascript",
      "Dokploy",
      "Cloudflare",
    ],
  },
  {
    title: "Gabay",
    description: "An AI agent Alternative to Openclaw, easy and secure.",
    github: "https://github.com/urkiddennn/Gabay",
    demo: "https://gabayagent.online",
    tags: ["Python", "FastApi", "Docker", "Astro", "Cloudflare"],
  },
  {
    title: "ACEHUB",
    description: "A website for teachers and students.",
    github: "https://github.com/urkiddennn/ACEHUB",
    demo: "https://acehub.vercel.app/",
    tags: ["React", "Convex", "Vite", "Tailwind"],
  },
];
---

<Modal id="projects-modal" title="Featured Projects">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      projects.map((project) => (
        <div class="group relative overflow-hidden rounded-xl border border-white/5 bg-white/[0.02] p-6 transition-all hover:border-white/20 hover:bg-white/[0.05]">
          <div class="mb-4 flex items-center justify-between">
            <h3 class="text-lg font-medium text-white">{project.title}</h3>
            <div class="flex gap-3">
              <a
                href={project.github}
                class="text-gray-400 hover:text-white transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                </svg>
              </a>
              <a
                href={project.demo}
                class="text-gray-400 hover:text-white transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                  <polyline points="15 3 21 3 21 9" />
                  <line x1="10" y1="14" x2="21" y2="3" />
                </svg>
              </a>
            </div>
          </div>
          <p class="mb-6 text-sm text-gray-400 line-clamp-2 font-thin">
            {project.description}
          </p>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="rounded-full border border-white/5 bg-white/5 px-2.5 py-0.5 text-[10px] font-medium text-gray-400">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</Modal>
