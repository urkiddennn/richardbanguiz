---
import Modal from "./Modal.astro";

const skillCategories = [
  {
    title: "Languages",
    skills: ["Rust", "TypeScript", "JavaScript", "Go", "Python"],
  },
  {
    title: "Frontend",
    skills: ["Astro", "React", "Next.js", "Tailwind CSS", "CSS & HTML"],
  },
  {
    title: "Backend",
    skills: ["Node.js", "Gin", "FastApi", "Express"],
  },
  {
    title: "Databases",
    skills: ["PostgreSQL", "MongoDB", "Convex", "Supabase", "SQLite"],
  },
  {
    title: "DevOps",
    skills: ["Docker", "Ubuntu", "Github", "Vercel", "Netlify"],
  },
  {
    title: "Tools",
    skills: ["GitHub", "Figma", "Zed", "VS Code"],
  },
];
---

<Modal id="skills-modal" title="Skills & Technologies">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {
      skillCategories.map((category) => (
        <div class="rounded-xl border border-white/5 bg-white/[0.02] p-6 transition-colors hover:border-white/10 hover:bg-white/[0.04]">
          <h3 class="mb-4 text-center text-sm font-semibold uppercase tracking-wider text-gray-400">
            {category.title}
          </h3>
          <ul class="space-y-2">
            {category.skills.map((skill) => (
              <li class="flex font-thin items-center gap-2 text-sm text-gray-300">
                <span class="h-1 w-1 rounded-full bg-gray-200" />
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</Modal>
