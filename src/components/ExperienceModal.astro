---
import Modal from "./Modal.astro";

const experiences = [
    {
        company: "Phoenix Publishing House",
        role: "Coding Instructor",
        period: "2025 - 2026",
        description:
            "Teaching advanced coding concepts and software development practices.",
    },
    {
        company: "DEPED",
        role: "Web Developer",
        period: "2024",
        description:
            "Developed and maintained web applications for educational services.",
    },
    {
        company: "Supsoft Tech",
        role: "Frontend Developer",
        period: "2024",
        description:
            "Specialized in creating responsive and interactive user interfaces.",
    },
];
---

<Modal id="experience-modal" title="Work Experience">
    <div class="space-y-8">
        {
            experiences.map((exp) => (
                <div class="relative pl-8 before:absolute before:left-0 before:top-2 before:h-[calc(100%-8px)] before:w-px before:bg-white/10">
                    <div class="absolute left-[-4px] top-2 h-2 w-2 rounded-full bg-gray-500 shadow-[0_0_10px_rgba(59,130,246,0.5)]" />
                    <div class="rounded-xl border border-white/5 bg-white/2 p-6 transition-all hover:border-white/20 hover:bg-white/5">
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-2 mb-4">
                            <h3 class="text-lg font-semibold text-white">
                                {exp.role}
                            </h3>
                            <span class="text-sm font-medium text-gray-400 bg-gray-400/10 px-3 py-1 rounded-full w-fit">
                                {exp.period}
                            </span>
                        </div>
                        <h4 class="text-md font-medium text-gray-400 mb-3">
                            {exp.company}
                        </h4>
                        <p class="text-sm text-gray-500 leading-relaxed font-thin">
                            {exp.description}
                        </p>
                    </div>
                </div>
            ))
        }
    </div>
</Modal>
